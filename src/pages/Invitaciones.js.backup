const InvitationCard = ({ invitation, onAccept, onReject, loading }) => {
  const roleInfo = ROLES[invitation.role] || ROLES.viewer;
  const isExpired = new Date(invitation.expires_at) < new Date();

  return (
    <motion.div 
      className={`invitation-detail-card ${isExpired ? 'expired' : ''}`}
      initial={{ opacity: 0, scale: 0.95 }}
      animate={{ opacity: 1, scale: 1 }}
      transition={{ duration: 0.3 }}
    >
      {isExpired && (
        <div className="expired-banner">
          <AlertCircle size={20} />
          Esta invitaci贸n ha expirado
        </div>
      )}

      <div className="invitation-header">
        <div className="organization-info">
          <div className="organization-icon">
            <Building2 size={32} />
          </div>
          <div>
            <h2>{invitation.organizations?.name || 'Organizaci贸n'}</h2>
            <p className="business-type">
              {invitation.organizations?.business_type === 'food' && ' Comida r谩pida'}
              {invitation.organizations?.business_type === 'clothing' && ' Ropa'}
              {invitation.organizations?.business_type === 'retail' && ' Retail'}
              {invitation.organizations?.business_type === 'other' && ' Otro'}
            </p>
          </div>
        </div>

        <div className="role-info">
          <div className="role-badge-large" style={{ backgroundColor: roleInfo.color }}>
            {roleInfo.icon}
            {roleInfo.label}
          </div>
          <p className="role-description">{roleInfo.description}</p>
        </div>
      </div>

      {invitation.message && (
        <div className="invitation-message">
          <Mail size={18} />
          <p>{invitation.message}</p>
        </div>
      )}

      <div className="permissions-section">
        <h3>Permisos que tendr谩s:</h3>
        <ul className="permissions-list">
          {roleInfo.permissions.map((permission, index) => (
            <li key={index}>
              <CheckCircle size={16} />
              {permission}
            </li>
          ))}
        </ul>
      </div>

      <div className="invitation-meta">
        <div className="meta-item">
          <Clock size={16} />
          <span>
            {isExpired 
              ? 'Expirada' 
              : `Expira: ${new Date(invitation.expires_at).toLocaleDateString('es-CO', {
                  day: 'numeric',
                  month: 'long',
                  year: 'numeric'
                })}`
            }
          </span>
        </div>
        <div className="meta-item">
          <Mail size={16} />
          <span>{invitation.email}</span>
        </div>
      </div>

      {!isExpired && (
        <div className="invitation-actions">
          <button 
            className="btn btn-reject"
            onClick={() => onReject(invitation.id)}
            disabled={loading}
          >
            <XCircle size={20} />
            Rechazar
          </button>
          <button 
            className="btn btn-accept"
            onClick={() => onAccept(invitation.token)}
            disabled={loading}
          >
            <CheckCircle size={20} />
            {loading ? 'Aceptando...' : 'Aceptar Invitaci贸n'}
            <ArrowRight size={20} />
          </button>
        </div>
      )}
    </motion.div>
  );
};

const Invitaciones = () => {
  const { user, loading: authLoading } = useAuth();
  const [searchParams] = useSearchParams();
  const navigate = useNavigate();
  const token = searchParams.get('token');
  
  // Estado para invitaci贸n p煤blica (sin autenticaci贸n)
  const [publicInvitation, setPublicInvitation] = useState(null);
  const [loadingPublic, setLoadingPublic] = useState(false);
  const [error, setError] = useState(null);
  
  // Para usuarios autenticados
  const { data: invitations = [], isLoading } = useMyInvitations(user?.email);
  const acceptInvitation = useAcceptInvitation();
  const rejectInvitation = useRejectInvitation();
  
  const [selectedInvitation, setSelectedInvitation] = useState(null);

  // Cargar invitaci贸n p煤blica si hay token y NO hay usuario autenticado
  useEffect(() => {
    const loadPublicInvitation = async () => {
      if (!token || user) return; // Si no hay token o ya est谩 autenticado, salir
      
      setLoadingPublic(true);
      setError(null);
      
      try {
        const { data, error: fetchError } = await supabase
          .from('team_invitations')
          .select(`
            *,
            organizations (
              name,
              business_type
            )
          `)
          .eq('token', token)
          .eq('status', 'pending')
          .single();
        
        if (fetchError) {
          console.error('Error fetching invitation:', fetchError);
          setError('Invitaci贸n no encontrada o ya fue usada');
          return;
        }
        
        // Verificar si expir贸
        if (new Date(data.expires_at) < new Date()) {
          setError('Esta invitaci贸n ha expirado');
          return;
        }
        
        setPublicInvitation(data);
      } catch (err) {
        console.error('Error loading invitation:', err);
        setError('Error al cargar la invitaci贸n');
      } finally {
        setLoadingPublic(false);
      }
    };
    
    loadPublicInvitation();
  }, [token, user]);

  // Si hay un token en la URL y el usuario est谩 autenticado, buscar esa invitaci贸n
  useEffect(() => {
    if (token && user && invitations.length > 0) {
      const invitation = invitations.find(inv => inv.token === token);
      if (invitation) {
        setSelectedInvitation(invitation);
      }
    }
  }, [token, invitations, user]);
      }
    } else if (invitations.length === 1) {
      setSelectedInvitation(invitations[0]);
    }
  }, [token, invitations]);

  const handleAccept = async (invitationToken) => {
    try {
      await acceptInvitation.mutateAsync(invitationToken);
      // Redirigir al dashboard despu茅s de aceptar
      setTimeout(() => {
        navigate('/dashboard');
      }, 1500);
    } catch (error) {
      console.error('Error accepting invitation:', error);
    }
  };

  const handleReject = async (invitationId) => {
    if (window.confirm('驴Est谩s seguro de rechazar esta invitaci贸n?')) {
      try {
        await rejectInvitation.mutateAsync(invitationId);
        navigate('/dashboard');
      } catch (error) {
        console.error('Error rejecting invitation:', error);
      }
    }
  };

  // Requiere autenticaci贸n
  if (authLoading) {
    return (
      <div className="invitaciones-container">
        <div className="loading-state">
          <div className="spinner"></div>
          <p>Cargando...</p>
        </div>
      </div>
    );
  }

  if (!user) {
    return (
      <div className="invitaciones-container">
        <div className="auth-required">
          <AlertCircle size={48} />
          <h2>Inicia sesi贸n para ver tus invitaciones</h2>
          <p>Necesitas estar autenticado para aceptar invitaciones de equipo.</p>
          <button 
            className="btn btn-primary"
            onClick={() => navigate('/login')}
          >
            Iniciar Sesi贸n
          </button>
        </div>
      </div>
    );
  }

  if (isLoading) {
    return (
      <div className="invitaciones-container">
        <div className="loading-state">
          <div className="spinner"></div>
          <p>Cargando invitaciones...</p>
        </div>
      </div>
    );
  }

  if (invitations.length === 0) {
    return (
      <div className="invitaciones-container">
        <div className="empty-invitations">
          <Mail size={64} />
          <h2>No tienes invitaciones pendientes</h2>
          <p>Cuando alguien te invite a un equipo, las invitaciones aparecer谩n aqu铆.</p>
          <button 
            className="btn btn-secondary"
            onClick={() => navigate('/dashboard')}
          >
            Ir al Dashboard
          </button>
        </div>
      </div>
    );
  }

  return (
    <div className="invitaciones-container">
      <div className="invitaciones-header">
        <h1>
          <Mail size={32} />
          Invitaciones de Equipo
        </h1>
        <p>Tienes {invitations.length} invitaci贸n{invitations.length !== 1 ? 'es' : ''} pendiente{invitations.length !== 1 ? 's' : ''}</p>
      </div>

      <div className="invitations-content">
        {selectedInvitation ? (
          <InvitationCard
            invitation={selectedInvitation}
            onAccept={handleAccept}
            onReject={handleReject}
            loading={acceptInvitation.isLoading || rejectInvitation.isLoading}
          />
        ) : (
          <div className="invitations-list-view">
            <h3>Selecciona una invitaci贸n:</h3>
            {invitations.map(invitation => (
              <motion.div
                key={invitation.id}
                className="invitation-list-item"
                onClick={() => setSelectedInvitation(invitation)}
                whileHover={{ scale: 1.02 }}
                whileTap={{ scale: 0.98 }}
              >
                <div className="list-item-icon">
                  <Building2 size={24} />
                </div>
                <div className="list-item-info">
                  <h4>{invitation.organizations?.name}</h4>
                  <p>Rol: {ROLES[invitation.role]?.label}</p>
                </div>
                <ArrowRight size={20} />
              </motion.div>
            ))}
          </div>
        )}
      </div>
    </div>
  );
};

export default Invitaciones;
