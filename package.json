{
  "name": "crece-mas",
  "version": "1.0.0",
  "description": "Sistema completo de gestión de ventas, inventario y facturación",
  "private": true,
  "keywords": [
    "react",
    "supabase",
    "ventas",
    "inventario",
    "facturacion",
    "pos",
    "crm"
  ],
  "author": "Equipo Crece Más",
  "license": "MIT",
  "homepage": "https://crece-mas.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/tu-usuario/crece-mas.git"
  },
  "bugs": {
    "url": "https://github.com/tu-usuario/crece-mas/issues"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@supabase/supabase-js": "^2.57.4",
    "@tanstack/react-query": "^5.89.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "browser-image-compression": "^2.0.2",
    "chart.js": "^4.5.0",
    "currency-codes": "^2.2.0",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.16",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.3",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.544.0",
    "react": "^19.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-currency-input-field": "^4.0.1",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.6.0",
    "react-phone-input-2": "^2.15.1",
    "react-router-dom": "^7.9.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "xlsx": "^0.18.5",
    "zod": "^4.1.9"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:network": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "db:setup": "echo 'Ejecutar database/setup/setup_completo.sql en Supabase'",
    "db:migrate": "echo 'Ejecutar archivos en database/migrations/'",
    "db:seed": "echo 'Ejecutar archivos en database/seeds/'",
    "db:diagnose": "echo 'Ejecutar archivos en database/diagnostics/'",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "serve": "serve -s build -l 3000",
    "setup-toppings": "bash setup-toppings.sh",
    "setup-storage-policies": "node ejecutar-politicas-storage.js",
    "generar-plantilla-excel": "node scripts/generar-plantilla-excel.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}